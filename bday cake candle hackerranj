
#include <stdio.h>

int main ()
{
  long long int a[100000],n, max=-1,count=0,i;
  scanf("%lld",&n);
  
  for (i = 0; i < n; i++)
  {
      scanf("%lld",&a[i]);
      if(max<=a[i]){
          max = a[i];
      }
      
  }
  
  for (i = 0; i < n; i++)
  {
        if(max==a[i]){
          count++;
        }
     
      
  }
  
  printf("%lld",count);

}
