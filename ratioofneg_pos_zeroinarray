#include <stdio.h>

int
main ()
{
  int i, n;
  float a[1000],pos = 0, neg = 0,zero=0;
  scanf ("%d", &n);
  for (i = 0; i < n; i++)
    {
        scanf ("%f", &a[i]);
        if(a[i]>0){
            pos++;
        }
        else if(a[i]<0){
            neg++;
        }
        
        else{
            zero++;
        }
    }

  printf("%f \n",(pos/n));
  printf("%f \n",(neg/n));
  printf("%f \n",(zero/n));
}
