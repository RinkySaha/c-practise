#include <stdio.h>
#include <ctype.h>

int main(void) {
  
    char str[90];
    int i;
    
    printf("enter a string: ");
    gets(str);
    
    for(i=0; str[i];i++){
        str[i]=toupper(str[i]);
    }
    printf("\nIn uppercase:");
    printf(str);
    
    for(i=0; str[i];i++){
        str[i]=tolower(str[i]);
    }
    printf("\nIn lowercase");
    printf(str);
    
    
    
    
  return 0;
}
