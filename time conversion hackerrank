#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main ()
{
  char time_12[10],h[2],m[2],s[2],jone[2];
  int i=0,j=0,hh,length,mm,ss,count=0;
  scanf("%s:", time_12);
  
  while(time_12[i]!=':'){
      h[i]=time_12[i];
      i++;
      count++;
  }
  hh = atoi(h);
  
  length= strlen(time_12);
  for(i=length-2;i<length;i++){
      jone[j]=time_12[i];
      j++;
  }
  
  if (strcmp(jone,"PM")!=0 && hh!=12) hh += 12 ;
  if (strcmp(jone,"AM")!=0 && hh==12) hh = 0 ;
  
  //minute
  count++;
  j=0;
  while(time_12[count]!=':'){
     m[j]=time_12[count];
     count++;
     j++;
  }
  mm = atoi(m);
  //second
  j=0;
  for(i=count+1;i<length-2;i++){
      s[j]=time_12[i];
      j++;
  }
  ss = atoi(s);
  printf("%02d:%02d:%02d", hh, mm, ss);
  return 0;
}

